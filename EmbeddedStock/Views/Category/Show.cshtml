@model Category

@{
    ViewData["title"] = "Show category";
}

<div class="row">
  <div class="col-xs-12 col-md-6">
    <h2>Show category</h2>
    <table class="table">
      <tr>
        <th>ID</th>
        <td>@Model.CategoryId</td>
      </tr>
      <tr>
        <th>Name</th>
        <td>@Model.Name</td>
      </tr>
      <tr>
        <th>ComponentTypes</th>
        <td>
          <ul>
            @foreach (var component in Model.CategoryComponentTypes)
            {
                <li>@component.ComponentType.ComponentName</li>
            }
          </ul>
        </td>
      </tr>
    </table>
  </div>
</div>