@using Microsoft.EntityFrameworkCore.Metadata.Internal
@using WebApplication.Models
@model WebApplication.Models.ComponentViewModels.ComponentEditViewModel

@{
    ViewData["Title"] = "Edit Component";
}

<h2>Edit Component</h2>

<form asp-action="Edit">
    <div class="form-horizontal">

        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ComponentNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ComponentNumber" class="form-control" />
                <span asp-validation-for="ComponentNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SerialNo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SerialNo" class="form-control"/>
                <span asp-validation-for="SerialNo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="Status">Status</label>
            <div class="col-md-10">
                <select class="form-control" id="Status" name="Status">
                    <option> </option>
                    @foreach (var status in Enum.GetValues(typeof (ComponentStatus)))
                    {
                        <option >@status</option>
                    }

                </select>
            </div>
        </div>
    <div class="form-group">
            <label asp-for="AdminComment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AdminComment" class="form-control" />
                <span asp-validation-for="AdminComment" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserComment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UserComment" class="form-control" />
                <span asp-validation-for="UserComment" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


